<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="95dp"
              android:orientation="vertical"
              android:padding="3dp"
              android:id="@+id/task" android:background="#16FFEB3B" android:layout_margin="10sp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars" android:id="@+id/image"
                android:layout_weight="0" android:layout_margin="5dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="51dp" android:id="@+id/description" android:layout_weight="0"
                    android:paddingStart="10px" android:paddingLeft="10px" android:textSize="16sp"
                    android:padding="3dp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="horizontal">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" android:id="@+id/date" android:layout_weight="1"
                        android:gravity="center" android:textSize="16sp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" android:id="@+id/time" android:layout_weight="1"
                        android:gravity="center" android:textSize="16sp"/>
                <Button
                        android:text="X"
                        android:layout_width="40dp"
                        android:layout_height="40dp" android:id="@+id/btn_delete" android:layout_weight="0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>